<?xml version="1.0" encoding="utf8" ?>
<!--
基本格式如下 
 -->

<!--  VERSION -->
<macro name="VERSION" value="1" />
<macro name="MAX_NAME_LEN" value="32" />

<!--  属性这种 -->
<struct name="user_info" version="1">
    <entry name="sex" type="int" desc="性别" />
    <entry name="count" type="char" />
    <entry name="user_name" type="char" count="MAX_NAME_LEN" refer="count" desc="姓名"/>
    <entry name="age" type="int" desc="年龄" version="2"/>
</struct>

<!--  技能吗 -->
<macro name="Q_SKILL" value="1" />
<macro name="W_SKILL" value="2" />
<macro name="E_SKILL" value="3" />
<macro name="R_SKILL" value="4" />
<union name="skill_data" >
    <entry name="qskill" type="char" id="Q_SKILL" />
    <entry name="wskill" type="int" id="W_SKILL" />
    <entry name="eskill" type="char" id="E_SKILL" count="12"/>
    <entry name="rskill" type="user_info" id="R_SKILL" />
</union>
<struct name="skill_info">
    <entry name="type" type="char" />
    <entry name="data" type="skill_data" select="type" />
</struct>

<!-- 技能列表 -->
<struct name="skill_list">    
    <entry name="skill_count" type="char" />
    <entry name="useless" type="int" version="10" />
    <entry name="name" type="char" count="MAX_NAME_LEN" desc="姓名" />
    <entry name="info_list" type="skill_info" count="5" refer="skill_count" />    
</struct>